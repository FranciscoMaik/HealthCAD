{% extends 'layout.twig' %}

{% block body %}
  <div class="" id="cadPac">
    <h2>Cadastrar Médico</h2>
    <div class="w-50 p-3">
      <form class="form-group" id="cadpacientes" action="cadastrodemedicos" method="post">
        <label for="">Nome do Médico</label>
        <br>
        <input type="text" class="form-control" name="nomemedico" value="" placeholder="Nome Completo">
        <br>
        <label for="">CRM</label>
        <br>
        <input type="text" name="crm" class="form-control" value="" placeholder="CRM">
        <br>
        <label for="">Especialidade (s)</label>
        <br>
        <div class="w-25 p-3">
          <select name="selectespecialidade" class="form-control">
            <option value="selecao" selected> -- Selecionar -- </option>
            <option value="Especialidade 1">Especialidade 1</option>
            <option value="Especialidade 2">Especialidade 2</option>
            <option value="Especialidade 3">Especialidade 3</option>
          </select>
        </div>
        <br>
        <button type="submit" class="button btn btn-primary btn-lg" name="enviar">Cadastrar</button>

      </form>
    </div>
  </div>
{% endblock %}
